doctype html
ul.actions.small.list-inline
  li.report.list-inline-item
    a(href='#', (click)="openReportModal(reportModal, $event);") Report Issue

ng-template(#reportModal, let-modal)
  .modal-header
    h4.modal-title Report Issue
    button.close(type="button", (click)="modalRef.dismiss()")
      span &times;
  .modal-body
    form([formGroup]="reportForm")
      .form-group
        label(for="report_reason") {{ venue.name | decode }} is
        select.form-control(name="report_reason", formControlName="reason")
          option(value="closed") permanently closed
          option(value="not_packer_bar") not Cheesehead friendly
          option(value="other_reason") (other reason)
        div.alert.alert-danger(*ngIf="reportForm.get('reason').invalid") A reason is required
      .form-group
        input.form-control.input-md.ng-hidden(type="text", name="other", placeholder="enter other reason", *ngIf="reportForm.value.reason == 'other_reason'", formControlName="other")
        div.alert.alert-danger(*ngIf="reportForm.get('other').invalid") A reason is required
  .modal-footer
    button.btn.btn-outline-dark(type="button", (click)="modalRef.dismiss()") Cancel
    button.btn.btn-primary(type="button", (click)="validateForm()") Submit Report